{
    "swagger":"2.0",
    "info":{
        "version":"1.0.0",
        "description":"API for E-commerce application",
        "title":"E-commerce API"
    },
    "host":"localhost:3200", 
    "securityDefinitions":{
        "JWT":{
            "in":"header",
            "name":"authorization",
            "type":"apiKey"
        }
    },
    "paths":{
        "/api/products":{
            "get":{
                "tags":["Products"],
                "summary":"Get Products",
                "description":"User will get all products",
                "security":[
                    {
                        "JWT":{}
                    }
                ],
                "responses":{
                    "200":{
                        "description":"ok"
                    },
                    "400":{
                        "description":"Unauthorized"
                    }

                }
            }
        },
        "/api/users/signin":{
            "post":{
                "tags":["Users"],
                "summary":"Login",
                "description":"User login to get token",
                "parameters":[
                    {
                        "in":"body", 
                        "name":"body",
                        "description":"User Credentials",
                        "schema":{
                            "type":"object", 
                            "properties":{
                                "email":{
                                    "type":"string"
                                },
                                "password":{
                                    "type":"string"
                                }
                            }

                        }
                    }
                ],
                "responses":{
                    "200":{
                        "description":"ok"
                    },
                    "400":{
                        "description":"Incorrect Credentials"
                    }

                }
            }
        }
    }
}